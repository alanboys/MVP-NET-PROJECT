<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="ErrorView">
        <attr name="ev_errorTitle" format="string" />
        <attr name="ev_errorTitleColor" format="color" />
        <attr name="ev_errorSubtitle" format="string" />
        <attr name="ev_errorSubtitleColor" format="color" />
        <attr name="ev_errorImage" format="reference" />
        <attr name="ev_showTitle" format="boolean" />
        <attr name="ev_showSubtitle" format="boolean" />
        <attr name="ev_showRetryButton" format="boolean" />
        <attr name="ev_retryButtonBackground" format="reference" />
        <attr name="ev_retryButtonTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ImageOrTextView">
        <attr name="itemViewText" format="string" />
        <attr name="itemViewTxtColor" format="color" />
        <attr name="itemViewImage" format="reference" />
        <attr name="itemViewShowTxt" format="boolean" />
        <attr name="itemViewShowRetryButton" format="boolean" />
        <attr name="itemViewRetryButtonBackground" format="reference" />
        <attr name="itemViewRetryButtonTextColor" format="color" />
    </declare-styleable>


    <!-- BaseDialogView -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- 设置默认progressdialog样式 -->
    <style name="baseProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>