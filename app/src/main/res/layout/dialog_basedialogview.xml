<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textv_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:textColor="@color/default_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!-- android:layout_height="34dp"-->

    <ImageView
        android:id="@+id/iv_blueview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/relayout_goneview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/relayout_addview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical">
            <!-- android:layout_marginTop="12dp"-->

            <TextView
                android:id="@+id/textv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/default_item_bg"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3.5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/default_text_color_low1"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_graybg_radius"
                android:textColor="@color/default_blue"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_confir"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_bg_radius"
                android:textColor="@color/default_item_bg"
                android:textSize="14dp" />

            <!--<View-->
            <!--android:id="@+id/btn_pace"-->
            <!--android:layout_width="15.0dp"-->
            <!--android:layout_height="wrap_content" />-->

        </LinearLayout>
    </LinearLayout>
</LinearLayout>